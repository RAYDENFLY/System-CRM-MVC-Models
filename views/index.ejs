  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    /* Custom CSS */
    body {
      background-color: #f8f9fa;
    }

    .container {
      padding-top: 80px;
    }

    .card {
      border: none;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .btn-login {
      margin-top: 20px;
    }

    .btn-login i {
      margin-right: 10px;
    }
    .thanks-text {
  text-align: center;
  margin-top: 40px;
}

.thanks-text h2 {
  font-size: 24px;
  margin-bottom: 20px;
}

.thanks-text img {
  width: 70px;
  margin: 10px;
}
.image-container {
  display: flex;
  justify-content: center;
}

.image{
  background-color: rgba(0, 0, 0, 0.13);
  align-items: center;
  width: 520px;
  border-radius: 20px 20px;
  display: inline-block;
}
