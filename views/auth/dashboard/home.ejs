<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    /* Custom CSS */
    body {
      background-color: #f8f9fa;
    }

    .container {
      padding-top: 40px;
    }

    .card {
      border: none;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card-body {
      padding: 20px;
    }

    .card-title {
      font-size: 24px;
      font-weight: bold;
    }

    .card-icon {
      font-size: 48px;
      color: #007bff;
    }

    .analytics {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-top: 40px;
      margin-bottom: 40px; /* Added margin bottom */
    }

    /* Footer CSS */
    .footer {
      position: fixed;
      bottom: 0;
      width: 100%;
      background-color: #f8f9fa;
      color: rgb(29, 28, 28);
      padding: 10px 0;
      text-align: center;
    }
  </style>
</head>
<body>
  <%- include('materials/navbar.ejs') %>
  <div class="container">
    <h2 style="text-align: center; margin-bottom: 42px;">Main Menu</h2>
    <div class="row">
      <div class="col-md-4 mb-4">
        <a href="/customers" style="text-decoration: none; color: inherit;">
          <div class="card">
            <div class="card-body">
              <i class="fas fa-users card-icon"></i>
              <h5 class="card-title">Customers</h5>
              <p class="card-text">Manage your customers.</p>
            </div>
          </div>
        </a>
      </div>      
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <i class="fas fa-handshake card-icon"></i>
            <h5 class="card-title">Opportunities</h5>
            <p class="card-text">Explore new opportunities.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <i class="fas fa-chart-line card-icon"></i>
            <h5 class="card-title">Analytics</h5>
            <p class="card-text">Track your business analytics.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <h2 style="text-align: center;">Latest Data</h2>
    <div class="row">
      <div class="col-md-6">
        <div class="analytics">
          <h4>New Customers</h4>
          <ul>
            <!-- Insert new customer data here -->
            <% if (newCustomers.length > 0) { %>
              <% newCustomers.forEach(customer => { %>
                <li><%= customer.name %></li>
              <% }); %>
            <% } else { %>
              <p>No new customers</p>
            <% } %>
          </ul>
          <!-- Tambahkan elemen canvas untuk grafik New Customers -->
          <canvas id="newCustomersChart"></canvas>
        </div>
      </div>
      <div class="col-md-6">
        <div class="analytics">
          <h4>New Opportunities</h4>
          <ul>
            <!-- Insert new opportunity data here -->
            <% if (newOpportunities.length > 0) { %>
              <% newOpportunities.forEach(opportunity => { %>
                <li><%= opportunity.name %></li>
              <% }); %>
            <% } else { %>
              <p>No new opportunities</p>
            <% } %>
          </ul>
          <!-- Tambahkan elemen canvas untuk grafik New Opportunities -->
          <canvas id="newOpportunitiesChart"></canvas>
        </div>
      </div>      
    </div>
  </div>
<h1><br><br></h1>
  <!-- Load Anime.js library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
  <script>
    // Animation using Anime.js
    const cards = document.querySelectorAll('.card');

    cards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        anime({
          targets: card,
          translateY: -10,
          duration: 200,
          easing: 'easeInOutSine'
        });
      });

      card.addEventListener('mouseleave', () => {
        anime({
          targets: card,
          translateY: 0,
          duration: 200,
          easing: 'easeInOutSine'
        });
      });
    });
  </script>
  <!-- Script untuk menggambar grafik -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Mendapatkan elemen canvas untuk menggambar grafik
  const newCustomersChart = document.getElementById('newCustomersChart').getContext('2d');
  const newOpportunitiesChart = document.getElementById('newOpportunitiesChart').getContext('2d');

  // Data untuk grafik New Customers
  const newCustomersData = {
    labels: ['January', 'February', 'March', 'April', 'May', 'June'],
    datasets: [{
      label: 'New Customers',
      data: [65, 59, 80, 81, 56, 55],
      backgroundColor: 'rgba(75, 192, 192, 0.2)',
      borderColor: 'rgba(75, 192, 192, 1)',
      borderWidth: 1
    }]
  };

  // Data untuk grafik New Opportunities
  const newOpportunitiesData = {
    labels: ['January', 'February', 'March', 'April', 'May', 'June'],
    datasets: [{
      label: 'New Opportunities',
      data: [35, 49, 70, 91, 36, 45],
      backgroundColor: 'rgba(255, 159, 64, 0.2)',
      borderColor: 'rgba(255, 159, 64, 1)',
      borderWidth: 1
    }]
  };

  // Konfigurasi grafik
  const chartOptions = {
    scales: {
      y: {
        beginAtZero: true
      }
    }
  };

  // Menggambar grafik New Customers
  const newCustomersChartInstance = new Chart(newCustomersChart, {
    type: 'bar',
    data: newCustomersData,
    options: chartOptions
  });

  // Menggambar grafik New Opportunities
  const newOpportunitiesChartInstance = new Chart(newOpportunitiesChart, {
    type: 'bar',
    data: newOpportunitiesData,
    options: chartOptions
  });
</script>


  <!-- Footer -->
  <footer class="footer">
    <p>System CRM Ver.MVC Models <br> &copy; 2024 345.ryx. All rights reserved.</p>
  </footer>
</body>
</html>
